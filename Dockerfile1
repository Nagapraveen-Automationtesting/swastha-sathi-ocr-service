# Base image
FROM ubuntu:22.04

# Prevent interactive prompts during build
ENV DEBIAN_FRONTEND=noninteractive

# Install Tesseract and language packs
RUN apt update && \
    apt install -y \
        tesseract-ocr \
        tesseract-ocr-eng \
        tesseract-ocr-hin \
        tesseract-ocr-deu \
        tesseract-ocr-tam \
        tesseract-ocr-mar \
        tesseract-ocr-kan \
        tesseract-ocr-tel \
        tesseract-ocr-mal \
        tesseract-ocr-guj \
        tesseract-ocr-pan \
        tesseract-ocr-sin \
        poppler-utils \
        imagemagick \
        curl \
        unzip \
        nano && \
    apt clean && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Default command
ENTRYPOINT ["tesseract"]
